		VALUES('BRE' || TO_CAHAR(SEQ_REPLY.NEXTVAL, 'FM000'), #{replyContent}, SYSDATE, SYSDATE, 'Y', {memberNo}, #{forumNo})
	</insert> -->


</mapper>









