<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee https://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
    	classpath:root-context.xml
		/WEB-INF/config/spring-security.xml
    </param-value>
  </context-param>
  
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  
  <servlet>
    <servlet-name>Member</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/member-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
   <servlet>
    <servlet-name>Project</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/project-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>Chat</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/chat-servlet.xml</param-value>
    </init-param>
   		<load-on-startup>1</load-on-startup>
        <async-supported>true</async-supported>
  </servlet>
  
    <servlet>
    <servlet-name>Issue</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/issue-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
    <servlet>
    <servlet-name>Mail</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/mail-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>Admin</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/admin-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>Work</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/work-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>Dept</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/dept-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
    <servlet-name>Rank</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/rank-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
   <servlet>
    <servlet-name>GeneralWork</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/generalWork-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet> 
  
  <servlet>
    <servlet-name>Forum</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>/WEB-INF/config/forum-servlet.xml</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>Member</servlet-name>
    <url-pattern>*.me</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>Project</servlet-name>
    <url-pattern>*.pr</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Chat</servlet-name>
    <url-pattern>*.ct</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>Issue</servlet-name>
    <url-pattern>*.iu</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Work</servlet-name>
    <url-pattern>*.wk</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>GeneralWork</servlet-name>
    <url-pattern>*.gw</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>Admin</servlet-name>
    <url-pattern>*.am</url-pattern>
  </servlet-mapping>
  
   <servlet-mapping>
    <servlet-name>Mail</servlet-name>
    <url-pattern>*.ma</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Dept</servlet-name>
    <url-pattern>*.de</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Rank</servlet-name>
    <url-pattern>*.ra</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>Forum</servlet-name>
    <url-pattern>*.fo</url-pattern>
  </servlet-mapping>
  
  
  <!-- 인코딩필터 추가 -->
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
  
</web-app>












